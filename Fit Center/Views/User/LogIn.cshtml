@model Fit_Center.Models.User

@{
    ViewData["Title"] = "LogIn";
}

<hr />

<div class="row">
    <div class="col-lg-4">
        <div class="left-content">
            <div class="inner-content">
                <h6>Iniciar Sesión</h6>
                <hr />
                <form asp-controller="User" asp-action="LogIn">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group form-group main-white-button scroll-to-section">
                        <label asp-for="Email" class="control-label">Correo:</label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group form-group main-white-button scroll-to-section">
                        <label asp-for="Password" class="control-label">Contraseña:</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <hr />

                    <div class="form-group">
                        <input type="submit" value="Iniciar Sesión" class="btn btn btn-dark" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="main-banner header-text">
            <div class="Modern-Slider">
                <div class="item">
                    <div class="img-fill">
                        <img src="~/images/Index.png" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
